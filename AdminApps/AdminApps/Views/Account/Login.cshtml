@using AdminApps.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translateX(-50%) translateY(-50%);
    }
    form{
        padding:0px;
        width:350px
    }
</style>

<div class="container" style="width:400px">
    <div class="card">
        <div class="card-body table-responsive">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical", role = "form" }))
                {
                <center>
                    <img style="height:100px;width:100px" src="~/assets/img/blue-user-icon-32.jpg" />
                    <h4>Login With Your Email Account</h4>
                </center>
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                    <div class="col-md-11">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger",placeholder="Email" })
                    </div>
                  
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label" })
                    <div class="col-md-11">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <div style="text-align:right" class="pull-right">
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </div>
                    </div>
                   
                </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" style="width:290px" value="Log in" class="btn btn-info" />
                        </div>
                    </div>
                }
            </section>
        </div>
    
    </div>
</div>








            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
